{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "paths": {
      "@app/*": ["./src/*"],
      "engine/*": ["../verza-sdk/src/*"],
      "@verza/sdk/utils": ["../verza-sdk/src/utils"],
      "@verza/sdk/react": ["../verza-sdk/src/framework-react"],
      "@verza/sdk/client": ["../verza-sdk/src/client"],
      "@verza/sdk/config": ["../verza-sdk/src/config"],
      "@verza/sdk": ["../verza-sdk/src"]
    }
  },
  "exclude": ["../verza-sdk/node_modules"]
}
